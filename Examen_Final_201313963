
import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.PrintWriter;

/**
 *
 * @author Daniel Alvizures
 */

public class Examenfinal_201313963 {
static String traduccion="";
static String mensaje="";
    
    public static void main(String[] args) throws FileNotFoundException {
       try { 
            File Lectura = new File(args[0]); 
            BufferedReader leer = new BufferedReader(new FileReader(Lectura)); 
            File Escritura=new File("Traductor_201313963.txt");
 
            FileWriter fichero=new FileWriter(Escritura,true);
            BufferedWriter buffer =new BufferedWriter(fichero);
            PrintWriter escribir= new PrintWriter(buffer);	
 
            String linea = null; 
            while ((linea=leer.readLine()) != null) { 
                    traducir(linea);
                    escribir.println(traduccion);
            } 
            escribir.close();
            leer.close( ); 
       } catch (Exception e) { 
       System.out.println(" El archivo no tiene escrito nada");
        } 
 
 }
    
 public static void traducir(String datos){
 	traduccion="";
        int i=0;
        while(i<datos.length())
        {
        traduccion=traduccion+ codificador(datos.charAt(i));
        i++;}
 	
 }
 public static String codificador(char letra_entrante){
 	switch(letra_entrante){
 		case 'a': return "y";
 		case 'b': return "h";
 		case 'c': return "e";
 		case 'd': return "s";
 		case 'e': return "o";
 		case 'f': return "c";
 		case 'g': return "v";
 		case 'h': return "x";	
 		case 'i': return "d";	
 		case 'j': return "u";	
 		case 'k': return "i";	
 		case 'l': return "g";	
 		case 'm': return "l";	
 		case 'n': return "b";	
 		case 'o': return "k";	
 		case 'p': return "r";	
 		case 'q': return "z";	
 		case 'r': return "t";	
 		case 's': return "n";	
 		case 't': return "w";	
 		case 'u': return "j";	
 		case 'v': return "p";	
 		case 'w': return "f";	
 		case 'x': return "m";	
 		case 'y': return "a";
  
 	}	
 		return " ";
}
}
